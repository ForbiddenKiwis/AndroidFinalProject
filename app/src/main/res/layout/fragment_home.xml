<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Menue"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <Button
        android:id="@+id/btnGoToBMIDisplay"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/alexandria"
        android:text="Weight Log"
        android:textColor="@color/mainFontColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoToBMICalculator" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginStart="80dp"
        android:src="@drawable/pick"
        app:layout_constraintStart_toEndOf="@id/btnGoToBMICalculator"
        app:layout_constraintTop_toTopOf="@id/btnGoToBMICalculator" />


    <Button
        android:id="@+id/btnGoToBMICalculator"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="248dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/alexandria"
        android:text="BMI Calculator"
        android:textColor="@color/mainFontColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/textHome"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="82dp"
        android:layout_height="79dp"
        android:layout_marginStart="84dp"
        android:src="@drawable/diet"
        app:layout_constraintStart_toEndOf="@id/btnGoToBMIDisplay"
        app:layout_constraintTop_toTopOf="@id/btnGoToBMIDisplay" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/alexandria"
        android:text="BMI Magazine"
        android:textColor="@color/mainFontColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoToBMIDisplay" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:layout_marginStart="64dp"
        android:src="@drawable/apple"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_toTopOf="@id/button3" />


</androidx.constraintlayout.widget.ConstraintLayout>