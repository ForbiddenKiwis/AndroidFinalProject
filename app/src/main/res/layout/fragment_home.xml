<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/cardview">

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/backgroundGreen"
            app:cardCornerRadius="25dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/apple" />

                <Button
                    android:id="@+id/btnGoToBMICalculator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculate BMI"
                    android:textColor="@color/mainFontColor"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/alexandria"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:backgroundTint="@color/backgroundGreen"
                    android:elevation="0dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/backgroundGreen"
            app:cardCornerRadius="25dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diet" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your BMI History"
                    android:textColor="@color/mainFontColor"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/alexandria"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:backgroundTint="@color/backgroundGreen"
                    android:elevation="0dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/backgroundGreen"
            app:cardCornerRadius="25dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eating" />

                <Button
                    android:id="@+id/btnGoToBMIMagazine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI Magazine"
                    android:textColor="@color/mainFontColor"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/alexandria"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:backgroundTint="@color/backgroundGreen"
                    android:elevation="0dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
