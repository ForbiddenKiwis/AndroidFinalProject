<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.changePassword.ChangePasswordFragment" >

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvEditLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit User"
        style="@style/Text_Style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvEditUserUserIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Id : "
        style="@style/Text_Style"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditLoginTitle"/>

    <TextView
        android:id="@+id/tvEditUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        style="@style/Text_Style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditUserUserIdLabel" />

    <TextView
        android:id="@+id/tvEditUserPasswordConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password : "
        style="@style/Text_Style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditUserPassword"/>

    <TextView
        android:id="@+id/tvEditUserUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserId"
        style="@style/Text_Style"
        android:inputType="text"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toEndOf="@+id/tvEditUserUserIdLabel"
        app:layout_constraintTop_toTopOf="@+id/tvEditUserUserIdLabel"/>

    <EditText
        android:id="@+id/etUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        style="@style/EditText_Style"
        app:layout_constraintStart_toEndOf="@+id/tvEditUserPassword"
        app:layout_constraintTop_toTopOf="@+id/tvEditUserPassword" />

    <EditText
        android:id="@+id/etEditUserPasswordConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        style="@style/EditText_Style"
        app:layout_constraintStart_toEndOf="@+id/tvEditUserPasswordConfirmation"
        app:layout_constraintTop_toTopOf="@+id/tvEditUserPasswordConfirmation"/>

    <Button
        android:id="@+id/btnEditUserSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        style="@style/Button_Style"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btnEditUserBack"
        style="@style/Button_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>